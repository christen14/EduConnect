<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.educonnect">

    <!-- Permissions (if needed, e.g., for internet access or Firebase) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Main application node -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <!-- Define MainActivity as the launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <!-- This makes MainActivity the entry point of the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- If you have other activities, define them here (e.g., DashboardActivity) -->
        <activity android:name=".DashboardActivity" />
        <activity android:name=".RegisterActivity" />
        <!-- Add any other activities or services as needed -->

    </application>
</manifest>
