<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="DashboardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#1565C0</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <!-- styles.xml -->
    <style name="DayHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <!-- Au lieu de layout_marginHorizontal (API 26+) : -->
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ExamsHeader">
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ExamsCell">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HourLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>