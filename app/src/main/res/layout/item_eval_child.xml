<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="4dp">

    <!-- 1) Student email -->
    <TextView
        android:id="@+id/tvEvalStudentEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="étudiant@example.com"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"/>

    <!-- 2) Submission date -->
    <TextView
        android:id="@+id/tvEvalDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soumis le 01/06/2025 14:30"
        android:textSize="12sp"
        android:textColor="#666666"
        android:paddingTop="4dp"/>

    <!-- 3) Q1–Q5 ratings -->
    <TextView
        android:id="@+id/tvEvalRatings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q1: 5  Q2: 4  Q3: 3  Q4: 5  Q5: 4"
        android:textSize="14sp"
        android:textColor="#444444"
        android:paddingTop="8dp"/>

    <!-- 4) Comment (if any) -->
    <TextView
        android:id="@+id/tvEvalComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commentaire : Très bon cours !"
        android:textSize="14sp"
        android:textColor="#333333"
        android:paddingTop="8dp"/>
</LinearLayout>
