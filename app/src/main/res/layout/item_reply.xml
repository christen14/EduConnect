<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#F5F5F5"
    android:layout_marginBottom="8dp">

    <!-- Author name (bold) -->
    <TextView
        android:id="@+id/tvReplyAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Utilisateur"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="4dp" />

    <!-- Reply content -->
    <TextView
        android:id="@+id/tvReplyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contenu de la réponse…"
        android:textSize="14sp"
        android:textColor="#444444"
        android:paddingBottom="4dp" />

    <!-- Reply date -->
    <TextView
        android:id="@+id/tvReplyDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="il y a 1 heure"
        android:textSize="12sp"
        android:textColor="#888888" />

    <!-- Upvote row: modern‐style ImageButton + vote count -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <!-- Small ImageButton for upvote (24×24 dp) -->
        <ImageButton
            android:id="@+id/btnUpvote"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/arrow_up_float"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Upvote"
            android:padding="0dp"
            android:layout_marginEnd="8dp"
            app:tint="#333333" />

        <!-- Vote count -->
        <TextView
            android:id="@+id/tvUpvoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="#333333"/>
    </LinearLayout>
</LinearLayout>
